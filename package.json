{
  "name": "@stoplight/ui-kit",
  "version": "0.0.0",
  "description": "Foundational React components for the Stoplight ecosystem.",
  "keywords": [
    "react"
  ],
  "main": "dist/index.js",
  "sideEffects": false,
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/ui-kit.git"
  },
  "license": "Apache-2.0",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "setup": "yarn",
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json && ts-node scripts/post-build-preparation",
    "build.docs": "build-storybook -c .storybook -o docs-auto",
    "test": "jest",
    "test.watch": "jest --watch",
    "test.prod": "yarn lint && yarn test --coverage --no-cache",
    "test.update": "yarn test --updateSnapshot",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.{ts,tsx}'",
    "format": "yarn lint --fix",
    "commit": "git-cz",
    "release": "semantic-release",
    "release.docs": "ts-node scripts/gh-pages-publish",
    "postpublish": "cp -r dist/package.json .",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "chromatic": "chromatic test"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "pkgRoot": "dist",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/__stories__/",
      "index.ts",
      "types.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "peerDependencies": {
    "lodash": "4.x.x",
    "react": "16.x.x"
  },
  "dependencies": {
    "react-input-autosize": "2.2.x",
    "styled-components": "4.0.3",
    "styled-system": "3.1.x"
  },
  "devDependencies": {
    "@babel/core": "7.1.x",
    "@commitlint/cli": "7.x.x",
    "@commitlint/config-conventional": "7.x.x",
    "@semantic-release/commit-analyzer": "6.x.x",
    "@semantic-release/git": "7.x.x",
    "@semantic-release/github": "5.x.x",
    "@semantic-release/npm": "5.x.x",
    "@semantic-release/release-notes-generator": "7.x.x",
    "@storybook/addon-knobs": "4.0.0-alpha.22",
    "@storybook/addon-options": "4.0.0-alpha.22",
    "@storybook/addons": "4.0.0-alpha.22",
    "@storybook/react": "4.0.0-alpha.22",
    "@types/jest": "23.x.x",
    "@types/lodash": "4.x.x",
    "@types/node": "10.x.x",
    "@types/react": "16.x.x",
    "@types/react-dom": "16.0.x",
    "@types/storybook__addon-actions": "3.4.x",
    "@types/storybook__react": "3.0.x",
    "@types/styled-components": "4.0.x",
    "@types/styled-system": "3.0.x",
    "babel-loader": "8.0.x",
    "commitizen": "3.x.x",
    "cz-conventional-changelog": "2.x.x",
    "husky": "1.x.x",
    "jest": "23.x.x",
    "lint-staged": "8.x.x",
    "lodash": "4.x.x",
    "moment": "2.22.x",
    "react": "16.x.x",
    "react-dom": "16.x.x",
    "rimraf": "2.x.x",
    "semantic-release": "15.x.x",
    "storybook-chromatic": "1.2.x",
    "ts-jest": "23.x.x",
    "ts-loader": "5.3.x",
    "ts-node": "7.0.x",
    "tslint-config-stoplight": "1.x.x",
    "typedoc": "0.13.x",
    "typescript": "3.1.x",
    "typescript-plugin-styled-components": "1.0.x"
  }
}
